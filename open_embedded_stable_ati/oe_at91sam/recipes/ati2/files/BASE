cd /home/root

rmmod *.ko 2>/dev/null
rmmod *.ko 2>/dev/null

insmod target.ko
insmod target_battery.ko

if [ -n "$1" ] ; then
    case "$1" in
    start)
        /etc/init.d/networking restart
        radio_conv -s /dev/ttyS1 -b `findbase.tcl` &
        ;;
    stop)
        killall radio_conv
        ;;
    force-reload|restart)
        killall radio_conv
        /etc/init.d/networking restart
        radio_conv -s /dev/ttyS1 -b `findbase.tcl` &
        ;;
    *)
        echo "bad command"
        ;;
    esac
fi

