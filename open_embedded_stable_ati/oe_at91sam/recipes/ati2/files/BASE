cd /home/root

rmmod *.ko 2>/dev/null
rmmod *.ko 2>/dev/null

insmod target.ko
insmod target_battery.ko minvoltval=12 charge=0

SERVER_STOP="killall radio_conv"
if [ -f wimax ] ; then
    SERVER_START="radio_conv -s /dev/ttyS1 -b `cat wimax`"
    killall ping
    ping -q `cat wimax` &
else
    SERVER_START="radio_conv -s /dev/ttyS1 -b `findbase.tcl`"
fi

if [ -n "$1" ] ; then
    case "$1" in
    start)
        $SERVER_START &
        ;;
    stop)
        $SERVER_STOP
        $FASIT_STOP
        ;;
    force-reload|restart)
        $SERVER_STOP
        $SERVER_START &
        ;;
    *)
        echo "bad command"
        ;;
    esac
else
    $SERVER_STOP
fi

