#!/bin/sh

# overwrite start routine...
start () {
   # load network
   source /usr/bin/load_network

   # load modules
   load_modules "target_user_interface.ko mover=1" \
                "target_battery.ko minvoltval=24" \
                "target_mover_generic.ko mover_type=0 reverse=0" \
                "target_generic_output.ko" \
                "mover.ko"

   # start default programs
   def_progs

   # start fasit client
   fasit_conn -M -l $lport -p $cport -i $ip -vv &
}

# leave default stop routine
